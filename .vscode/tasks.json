{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: run with debugpy",
      "type": "shell",
      "command": "python",
      "args": [
        "backend/tools/run_backend_debug.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "python",
        "pattern": [
          {
            "regexp": "^(.*):(\\d+): (.*)$",
            "file": 1,
            "line": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Starting backend debug server",
          "endsPattern": "^Waiting for debugger to attach on 127\\.0\\.0\\.1:5678$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "backend: stop debugpy",
      "type": "shell",
      "command": "python",
      "args": [
        "backend/tools/stop_backend_debug.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
